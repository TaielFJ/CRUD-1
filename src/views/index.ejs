<!DOCTYPE html>
<html lang="es">
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<%- include('partials/headerNavbar') %>
	<div class="banner"></div>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% productosVisitados.forEach(product => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="products/detail/<%- product.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%- product.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$ <%- toThousand(product.price - product.price * product.discount / 100) %> </h2>
							<span><%- product.discount !== 0 ? `${product.discount} %OFF` : "" %> </span>
							<p><%- product.name %> </p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
				
			</div>
			<% }) %>
		</div>
	</div>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% productosOfertas.forEach(oferta => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%- oferta.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%- oferta.image %> " alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$ <%- toThousand(oferta.price) %> </h2>
							<span><%-oferta.discount %>%OFF </span>
							<p><%- oferta.name %> </p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<%- include('partials/footer') %>

</body>	
</html>